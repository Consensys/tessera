                        </exclusion>
                        <!-- aopalliance already packaged in spring-aop -->
                        <exclusion>
                            <groupId>org.glassfish.hk2.external</groupId>
                            <artifactId>aopalliance-repackaged</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
            </dependencies>

        </profile>

        <profile>
            <id>resteasy</id>

            <dependencies>
                <dependency>
                    <groupId>com.quorum.tessera</groupId>
                    <artifactId>resteasy-server</artifactId>
                    <scope>runtime</scope>
                </dependency>
            </dependencies>

        </profile>

    </profiles>


