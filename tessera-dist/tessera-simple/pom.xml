<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>net.consensys.quorum.tessera</groupId>
        <artifactId>tessera-dist</artifactId>
        <version>21.1.0-SNAPSHOT</version>
    </parent>
    <artifactId>tessera-simple</artifactId>
    <name>tessera-simple</name>

    <packaging>jar</packaging>

    <dependencies>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>tessera-launcher</artifactId>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>encryption-jnacl</artifactId>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>argon2</artifactId>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>config-cli</artifactId>
            <scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>encryption-api</artifactId>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>security</artifactId>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>transaction-jaxrs</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>sync-jaxrs</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>thirdparty-jaxrs</artifactId>
            <scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>server-api</artifactId>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>service-locator-api</artifactId>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>tessera-core</artifactId>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>service-locator-spring</artifactId>
            <scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jul-to-slf4j</artifactId>
        </dependency>

        <dependency>
            <groupId>net.consensys.quorum.tessera</groupId>
            <artifactId>jersey-server</artifactId>
            <scope>runtime</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.glassfish.web</groupId>
                    <artifactId>javax.el</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>javax.el</groupId>
                    <artifactId>javax.el-api</artifactId>
                </exclusion>
                <!-- aopalliance already packaged in spring-aop -->
                <exclusion>
                    <groupId>org.glassfish.hk2.external</groupId>
                    <artifactId>aopalliance-repackaged</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.glassfish.jersey.media</groupId>
            <artifactId>jersey-media-json-processing</artifactId>
            <scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>org.glassfish.hk2.external</groupId>
            <artifactId>javax.inject</artifactId>
            <version>2.5.0-b42</version>
            <scope>runtime</scope>
        </dependency>

    </dependencies>



    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
